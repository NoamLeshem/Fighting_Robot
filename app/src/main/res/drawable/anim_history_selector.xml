<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:targetApi="21">

    <!-- provide a different drawable for each state-->
    <item android:id="@+id/state_on"
        android:drawable="@drawable/ic_history"
        android:iconTint="?colorPrimary"
        android:state_checked="true"/>

    <item android:id="@+id/state_off"
        android:drawable="@drawable/ic_history_off"
        android:state_checked="false"/> <!-- specify transitions -->
    <transition
        android:drawable="@drawable/anim_history_vector"
        android:fromId="@id/state_off"
        android:toId="@id/state_on" />

</animated-selector>